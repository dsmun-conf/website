head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width initial-scale=1 shrink-to-fit=no")

    if page.url === '/'
        link(rel="preload" href="/img/backgrounds/background-thumb.jpg" as="image" importance="high")

        link(rel="preload" href="/img/backgrounds/background-small.jpg" as="image" media="all and (max-width: 450px)" importance="high")
        link(rel="preload" href="/img/backgrounds/background-medium.jpg" as="image" media="all and (min-width: 450px)" importance="high")
        link(rel="preload" href="/img/backgrounds/background-large.jpg" as="image" media="all and (min-width: 800px)" importance="high")
        link(rel="preload" href="/img/backgrounds/background-xlarge.jpg" as="image" media="all and (min-width: 1350px)" importance="high")

    link(rel="preload" href="/fonts/lato-regular.woff2" as="font" type="font/woff2" crossorigin)
    link(rel="preload" href="/fonts/lato-black.woff2" as="font" type="font/woff2" crossorigin)
    link(rel="preload" href="/fonts/lora-regular.woff2" as="font" type="font/woff2" crossorigin)
    link(rel="preload" href="/img/logo-optimized.svg" as="image" importance="high")

    block stylesheets
        link(rel="stylesheet" href="/css/sanitize.css")
        link(rel="stylesheet" href="/css/style.css")

    link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")

    title
        if name != null
            | #{name} | DSMUN 2019
        else if title != null
            | #{title} | DSMUN 2019
        else
            | The Doon School Model United Nations 2019

    meta(name="description" content="The Doon School Model United Nations 2019 website")
    meta(name="theme-color" content="#009ade")

    link(rel="manifest" href="/manifest.json")

    block scripts
        script(src="/js/fathom.js" defer)
